snippet     text_template_
abbr        text/template
options     word
	{{range ${1:pipelineArray}}} ${2} {{end}}

#
# actions
#
snippet     text_template
abbr        text/template
options     word
	tmpl, err := template.New("${1:nameOfTemplate}").Parse("${2:template}")
	if err != nil {
		panic(err)
	}
	err = tmpl.Execute(os.Stdout, ${1:structValue})
	if err != nil {
		panic(err)
	}
