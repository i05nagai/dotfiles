#
# binomial
#
snippet     binomial_pdf
abbr        Bi(?, ?)
options     word
	\\mathrm{Bi}(${1:x_{1}}, \ldots, ${2:x_{N}}; ${3:p})${0}

snippet     binomial_pdf
abbr        Bi(?, ?)
options     word
	\mathrm{Bi}(x_{1}, \ldots, x_{N}; p)
	:=
	\left(
		\begin{array}{c}
			N \\
			\sum_{i=1}^{N}
				x_{i}
		\end{array}
	\right)
	p^{
		\sum_{i=1}^{N}
			x_{i}
	}
	(1 - p)^{
		N
		-
		\sum_{i=1}^{N}
			x_{i}
	}

snippet     normal_cdf
abbr        N(?, ?)
options     word
	F_{\\mathrm{Bi}}(${1:x_{1}}, \ldots, ${2:x_{N}}; ${3:p})${0}

